<div class="admin-title">
    <h2>Posts</h2>
    <a href="/add-post" class="btn btn-primary"><p>Nuevo Trabajo</p></a>
</div>

<ul class="admin-post">
    <ul class="admin-posts">
        <% data.forEach(post => { %>
            <li class="admin-post-card">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/post/<%= post._id %>"><%= post.title %> &nearr;</a>
                        </h5>
                        <div class="admin-post-controls">
                            <a href="/edit-post/<%= post._id %>" class="btn btn-edit"><p>Editar</p></a>
                            <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
                                <input type="submit" value="Delete" class="btn btn-delete">
                            </form>
                        </div>
                    </div>
                </div>
            </li>
        <% }) %>
    </ul>
</ul>

<% if (nextPage !== null) { %>
    <a href="/dashboard?page=<%= nextPage %>" class="pagination">&lt Seguir viendo</a>
  <% } %>
