<div class="container edit-post-container">
    <a href="/dashboard" class="back-link">&larr; Back</a>
    <div class="admin-title">
      <h2>View / Edit Post</h2>
      <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST" class="delete-form">
        <input type="submit" value="Delete" class="btn btn-delete">
      </form>
    </div>
  
    <form action="/edit-post/<%= data._id %>?_method=PUT" method="POST"  class="edit-post-form">
      <div class="form-group">
        <label for="title"><b>Titulo del Trabajo</b></label>
        <input type="text" id="title" placeholder="Post Title" name="title" value="<%= data.title %>" required>
      </div>
  
      <div class="form-group">
        <label for="body"><b>Contenido</b></label>
        <textarea id="body" name="body" rows="10" required><%= data.body %></textarea>
      </div>
  
      <div class="form-group">
        <label for="resolved"><b>¿El problema fue resuelto?</b></label>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" id="resolved" name="resolved">
          <label class="form-check-label" for="resolved">Sí</label>
        </div>
      </div>
  
      <input type="submit" value="Update" class="btn btn-primary">
    </form>
  </div>
  
  