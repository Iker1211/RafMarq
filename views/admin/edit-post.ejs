<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
    <h2>View / Edit Post</h2>

    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn-delete btn">
    </form>

</div>

<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST" enctype="multipart/form-data">

    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Post Title" name="title" value="<%= data.title %>">

    <label for="body"><b>Content</b></label>
    <textarea name="body" rows="10" cols="50"><%= data.body %></textarea>

    <label for="check"><b>¿El problema fue resuelto?</b></label>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="resolved" name="resolved">
        <label class="form-check-label" for="resolved">Sí</label>
    </div>

    <label for="file"><b>Adjuntar archivo</b></label>
    <input type="file" name="file" id="file" class="form-control mb-3">

    <input type="submit" value="Update" class="btn">
</form>